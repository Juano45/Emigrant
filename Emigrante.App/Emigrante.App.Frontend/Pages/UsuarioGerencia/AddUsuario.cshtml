@page
@model Emigrante.App.Frontend.Pages.AddUsuarioModel
@using Emigrante.App.Dominio 
@{
}
<h1>Registro de Usuarios de Gerencia</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="usuario.TipoDoc" class="col-sm-2">Tipo de Documento</label>
        <div class="col-sm-10">
            <select asp-for="usuario.TipoDoc" asp-items="Html.GetEnumSelectList<TipoDoc>()"></select>   
        </div>
        <span class="text-danger" asp-validation-for="usuario"></span>
    </div>>
    <div class="form-group row">
        <label asp-for="usuario.NumDoc " class="col-sm-2">Número de documento</label>
        <input asp-for="usuario.NumDoc" class="form-control" value="" required>
        <span class="text-danger" asp-validation-for="usuario.NumDoc"></span>
    </div>
    <div class="form-group row">
        <label asp-for="usuario.Nombres" class="col-sm-2">Nombres</label>
        <input asp-for="usuario.Nombres" class="form-control" value="" required>
        <span class="text-danger" asp-validation-for="usuario.Nombres"></span>
    </div>
    <div class="form-group row">
        <label asp-for="usuario.Apellidos" class="col-sm-2">Apellidos</label>
        <input asp-for="usuario.Apellidos" class="form-control" value="" required>
        <span class="text-danger" asp-validation-for="usuario.Apellidos"></span>
    </div>
    <div class="form-group row">
        <label asp-for="usuario.Genero" class="col-sm-2">Genero</label>
        <div class="col-sm-10">
            <select asp-for="usuario.Genero" asp-items="Html.GetEnumSelectList<Genero>()"></select>   
        </div>
        <span class="text-danger" asp-validation-for="usuario.Genero"></span>
    </div>
    <div class="form-group row">
        <label asp-for="usuario.Email" class="col-sm-2">Correo electrónico</label>
        <input asp-for="usuario.Email" class="form-control" value="" required>
    </div>
    <div class="form-group row">
        <label asp-for="usuario.Dependencia" class="col-sm-2">Área de la Compañia</label>
        <input asp-for="usuario.Dependencia" class="form-control" value="">
        <span class="text-danger" asp-validation-for="usuario.Dependencia"></span>
    </div>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Registrar</button>
    </div>
</form>


